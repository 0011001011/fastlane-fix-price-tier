#!/usr/bin/env ruby

$:.push File.expand_path("../../lib", __FILE__)

require 'fastfix'
require 'commander'

HighLine.track_eof = false

class FastfixApplication
  include Commander::Methods

  def run
    program :version, Fastfix::VERSION
    program :description, Fastfix::DESCRIPTION
    program :help, 'Author', 'Felix Krause <fastfix@krausefx.com>'
    program :help, 'Website', 'https://fastlane.tools'
    program :help, 'GitHub', 'https://github.com/fastlane/fastfix'
    program :help_formatter, :compact

    FastlaneCore::CommanderGenerator.new.generate(Fastfix::Options.available_options)

    command :run do |c|
      c.syntax = 'fastfix'
      c.description = 'TODO'

      c.action do |args, options|
        params = FastlaneCore::Configuration.create(Fastfix::Options.available_options, options.__hash__)
        Fastfix::Runner.new.run(params)
      end
    end

    [:appstore, :adhoc, :development, :enterprise].each do |type|
      command type do |c|
        c.syntax = "fastfix #{type}"

        c.action do |args, options|
          h = options.__hash__
          h[:type] = type.to_s
          params = FastlaneCore::Configuration.create(Fastfix::Options.available_options, h)
          Fastfix::Runner.new.run(params)
        end
      end
    end

    command :init do |c|
      c.syntax = 'fastfix init'
      c.description = 'Create the Fixfile for you'
      c.action do |args, options|
        containing = (File.directory?("fastlane") ? 'fastlane' : '.')
        path = File.join(containing, "Fixfile")

        if File.exist?(path)
          puts "You already got a Fixfile in this directory".yellow
          return 0
        end

        require 'fastfix/setup'
        Fastfix::Setup.new.run(path)
      end
    end

    default_command :run

    run!
  end
end

begin
  # FastlaneCore::UpdateChecker.start_looking_for_update('fastfix')
  FastfixApplication.new.run
ensure
  # FastlaneCore::UpdateChecker.show_update_status('fastfix', Fastfix::VERSION)
end
